<!doctype html>
<html lang="en">

<head>
    <title>EMP System</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <header>
        <%- include ('header') %>
    </header>

    <main>
        <div class="container">
            <!-- Search Form -->
            

            <div class="row">
                <div class="col-12">
                    <table class="table table-bordered table-striped caption-top text-center table-hover">
                        <caption>
                            <h1>Employee Data</h1>
                        </caption>
                        <thead>
                            <tr>
                                <th>Employee ID</th>
                                <th>Employee Name</th>
                                <th>Employee Department</th>
                                <th>Employee Salary</th>
                                <th>Employee Task</th>
                                <th>Employee Task Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% employees.map((emp, index)=> { %>
                                <tr>
                                    <td>
                                        <%= emp.empid %>
                                    </td>
                                    <td>
                                        <%= emp.empname %>
                                    </td>
                                    <td>
                                        <%= emp.department %>
                                    </td>
                                    <td>
                                        <%= emp.salary %>
                                    </td>
                                    <td>
                                        <%= emp.task %>
                                    </td>
                                     <td>
                                        <%= emp.description %>
                                    </td>

                                    <td class="gap-3 d-flex">
                                        <a href="/emp/delete/<%= emp.id %>" class="btn btn-danger">Delete</a>
                                        <a href="/emp/edit/<%= emp.id %>" class="btn btn-warning">Edit</a>
                                        <a href="/emp/task/<%= emp.id %>" class="btn btn-success">Task</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>